<h1>Editing popup_ad</h1>

<% form_for(@popup_ad) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :cpl %><br />
    <%= f.text_field :cpl %>
  </p>
  <p>
    <%= f.label :call_to_action %><br />
    <%= f.text_field :call_to_action %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @popup_ad %> |
<%= link_to 'Back', popup_ads_path %>